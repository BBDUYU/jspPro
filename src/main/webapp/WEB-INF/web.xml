  <!-- application 객체에서 사용할 설정 선언 -->
  <context-param>
  	<description>DB사용자계정</description>
  	<param-name>user</param-name>
  	<param-value>scott</param-value>
  </context-param>
  <context-param>
  	<description>DB사용자비밀번호</description>
  	<param-name>password</param-name>
  	<param-value>tiger</param-value>
  </context-param>
  <context-param>
  	<description>게시판 다운로드 경로</description>
  	<param-name>path</param-name>
  	<param-value>/days06</param-value>
  </context-param>
  	<resource-ref>
	 <description>Oracle Datasource example</description>
	 <res-ref-name>jdbc/myoracle</res-ref-name>
	 <res-type>javax.sql.DataSource</res-type>
	 <res-auth>Container</res-auth>
	</resource-ref>
	
	<servlet>
    <description>days07 MVC 패턴 컨트롤러</description>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>days15.replyboard.controller.DispatcherServlet</servlet-class>
    <init-param>
      <description>요청URL-처리할 CommandHandler 객체 매핑 설정 파일 등록</description>
      <param-name>mappingPath</param-name>
      <param-value>/WEB-INF/replyboard_commandHandler.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
	<filter>
		<description>인코딩필터</description>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>com.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<description>인코딩 초기값</description>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
			<filter-name>characterEncodingFilter</filter-name>
			<url-pattern>/*</url-pattern> 
			<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
</web-app>